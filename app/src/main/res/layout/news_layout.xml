<?xml version="1.0" encoding="utf-8"?>

<android.support.v7.widget.CardView xmlns:app="http://schemas.android.com/apk/res-auto"

    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:ndandroid="http://schemas.android.com/tools"
    android:layout_marginTop="38dp"
    card_view:cardUseCompatPadding="true"
    card_view:cardElevation="2dp"
    card_view:cardCornerRadius="2dp">



<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"

    android:background="@drawable/cury"
    android:clipChildren="false"
    android:clipToPadding="false"
android:padding="1px"
    android:layout_height="match_parent">

<LinearLayout
    android:layout_above="@+id/date"
    android:weightSum="2"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout

        android:clipChildren="false"
        android:clipToPadding="false"
        android:layout_margin="1dp"
        android:layout_weight="1"
        android:orientation="vertical"
        android:layout_width="match_parent"

        android:layout_height="0dp">

        <ImageView


            android:id="@+id/poster"
            android:scaleType="fitXY"

            android:layout_width="match_parent"
            android:layout_height="match_parent" />


    </LinearLayout>


    <LinearLayout

        android:clipChildren="false"
        android:clipToPadding="false"
        android:layout_weight="1"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="0dp">

        <TextView
            android:id="@+id/headlines"

            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:textSize="22sp"
            android:textColor="@color/secondary_text"
            android:maxLines="2"
            android:ellipsize="end"
            android:text="Total 13 IAS Officers has been transferred"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />


        <TextView
            ndandroid:layout_marginTop="5dp"
            android:maxLines="18"

            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:textSize="14sp"
            android:textColor="@color/primary_text"
            android:id="@+id/detailed"
            android:ellipsize="end"
            android:text="IAS and PS Labour Deppt. MK Varshney has posted the new Principal Secretary of GAD

Commissioner Jabalpur Deepak Khandekar has posted the new Principal Secretary of Forest Department.

Secretary to CM Hariranjan Rao has posted the new Managing Director of MP Tourism Corporation."
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

    </LinearLayout>
</LinearLayout>

<LinearLayout
    android:id="@+id/date"
android:layout_above="@+id/btm"
    android:layout_width="match_parent"
    android:orientation="horizontal"
    android:layout_height="14dp">

    <TextView
        android:textStyle="bold"
        android:layout_marginLeft="6dp"
        android:gravity="center"
        android:textColor="@color/accent"
        android:paddingTop="1dp"
        android:paddingBottom="1dp"
        android:textSize="9sp"
        android:text="vidhayakanews.com"
        android:layout_width="wrap_content"
        android:layout_height="match_parent" />
    <TextView
        android:id="@+id/timestamp"
        android:textStyle="italic"
        android:layout_marginLeft="3dp"
android:gravity="center"
        android:textSize="9sp"
        android:textColor="#363636"
        android:paddingTop="1dp"
        android:paddingBottom="1dp"

        android:text="21 hours ago"
        android:layout_width="wrap_content"
        android:layout_height="match_parent" />



</LinearLayout>



    <LinearLayout

        android:layout_alignParentBottom="true"
        android:id="@+id/btm"
android:background="@drawable/purpy_upper"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="35dp">



        <LinearLayout
            android:background="@drawable/purpy_right"
            android:id="@+id/share"
            android:clickable="true"
            android:layout_weight="1"
            android:layout_gravity="center"
            android:gravity="center"
            android:orientation="horizontal"
            android:layout_width="0dp"
            android:layout_height="match_parent">
            <ImageView

                android:layout_marginRight="5dp"
                android:src="@drawable/share"
                android:layout_width="12dp"
                android:layout_height="12dp" />
            <TextView
                android:textColor="@color/primary_text"
                android:text="Share"
                android:textSize="10sp"
                android:gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="match_parent" />



        </LinearLayout>

        <LinearLayout
            android:id="@+id/forward"
            android:clickable="true"
            android:layout_gravity="center"
            android:gravity="center"
            android:orientation="horizontal"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="match_parent">

            <ImageView

                android:layout_marginRight="5dp"
                android:src="@drawable/forward"
                android:layout_width="12dp"
                android:layout_height="12dp" />

            <TextView
                android:textSize="10sp"
                android:textColor="@color/primary_text"
                android:text="Forward"
                android:gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="match_parent" />

        </LinearLayout>

    </LinearLayout>
    </RelativeLayout>

    </android.support.v7.widget.CardView>