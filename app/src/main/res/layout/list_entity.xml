<?xml version="1.0" encoding="utf-8"?>

<android.support.v7.widget.CardView xmlns:app="http://schemas.android.com/apk/res-auto"

    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"

    android:layout_marginTop="2dp"

    android:layout_marginBottom="6dp"
    card_view:cardUseCompatPadding="true"
    card_view:cardElevation="8dp"
    card_view:cardCornerRadius="3dp">

    <RelativeLayout
        android:layout_marginLeft="4dp"
        android:layout_marginRight="4dp"
        android:orientation="vertical" android:layout_width="match_parent"
        android:background="#ffffff"
        android:layout_height="wrap_content">
<RelativeLayout
    android:background="#ffffff"
    android:layout_margin="4dp"
    android:id="@+id/layou"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <ImageView

        android:src="@drawable/aman"
        android:id="@+id/photo"
        android:layout_width="42dp"
        android:layout_margin="5dp"
        android:layout_height="52dp" />

    <TextView
        android:gravity="center_vertical"
        android:textSize="14sp"
        android:layout_marginLeft="4dp"
        android:layout_marginTop="5dp"
        android:textColor="#000000"
        android:text="Aman"
        android:id="@+id/heading"

        android:layout_toRightOf="@+id/photo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <TextView
        android:gravity="center_vertical"
        android:textSize="14sp"
        android:textColor="@color/accent"
        android:layout_marginLeft="4dp"


        android:text="vidhayakanews.com"
        android:id="@+id/desc"
        android:layout_below="@+id/heading"

        android:layout_toRightOf="@+id/photo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <TextView
        android:gravity="center_vertical"
        android:textSize="10sp"
        android:textColor="#9a9a9a"
        android:layout_marginLeft="4dp"


        android:text="27th Sept, 2015"
        android:id="@+id/date"
        android:layout_below="@+id/desc"

        android:layout_toRightOf="@+id/photo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <TextView
        android:textStyle="bold"
        android:textColor="#0f73fd"
        android:textSize="15dp"
        android:layout_marginTop="2dp"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:id="@+id/_h"
        android:text="This is the bloody heading"
        android:layout_below="@+id/photo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <TextView   android:layout_marginLeft="7dp"
        android:layout_marginRight="7dp"
        android:layout_marginTop="1dp"

        android:id="@+id/_d"
        android:textSize="16dp"
        android:text="This is the bloody description"
        android:layout_below="@+id/_h"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />


</RelativeLayout>




        <LinearLayout

            android:layout_below="@+id/layou"
            android:id="@+id/btm"

            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="25dp">



            <LinearLayout

                android:id="@+id/share"
                android:clickable="true"
                android:layout_weight="1"
                android:gravity="center"
                android:layout_gravity="center"
                android:orientation="horizontal"
                android:layout_width="0dp"
                android:layout_height="match_parent">
                <ImageView
                    android:tint="@color/primary_dark"
                    android:src="@drawable/share"
                    android:layout_marginRight="20dp"
                    android:layout_width="12dp"
                    android:layout_height="12dp" />

                <TextView
                    android:textColor="@color/primary_text"
                    android:textSize="10sp"
                    android:text="Share"
                    android:gravity="center"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />



            </LinearLayout>

            <LinearLayout
                android:clickable="true"
                android:id="@+id/delete"
                android:gravity="center"
                android:layout_gravity="center"
                android:orientation="horizontal"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="match_parent">



                <ImageView
                    android:tint="@color/primary_dark"
                    android:src="@drawable/forward"
                    android:layout_marginRight="20dp"
                    android:layout_width="12dp"
                    android:layout_height="12dp" />

                <TextView
                    android:textColor="@color/primary_text"
                    android:textSize="10sp"
                    android:text="Forward"
                    android:gravity="center"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

            </LinearLayout>

        </LinearLayout>





    </RelativeLayout>

</android.support.v7.widget.CardView>
